{% extends '@email/default/notification/body.html.twig' %}

{% block content %}
    Author: {{ comment.author }}<br/>
    email: {{ comment.email }}<br/>
    State: {{ comment.state }}<br/>

<p>
    {{ comment.text }}
</p>
{% endblock %}

{% block action %}
    <a href="{{ url('review_comment', {id: comment.id }) }}">Accept</a>
    <a href="{{ url('review_comment', {id: comment.id, reject: true }) }}">Reject</a>
{% endblock %}